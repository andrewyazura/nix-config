" --- Enable IdeaVim plugins https://jb.gg/ideavim-plugins

Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'

set which-key
set commentary

set scrolloff=5
set incsearch
set ignorecase
set smartcase
set notimeout

set showcmd
set hlsearch

let mapleader=" "

map <leader>F <Action>(ReformatCode)

map <leader>ff <Action>(GotoFile)
map <leader>G <Action>(FindInPath)

map <leader>w <C-W>

map <leader>tc <Action>(RunClass)
map <leader>dc <Action>(DebugClass)

map gd <Action>(GotoDeclaration)
map gD <Action>(GotoTypeDeclaration)

map gra <Action>(ShowIntentionActions)
map grn <Action>(RenameElement)

map grr <Action>(FindUsages)
map gri <Action>(GotoImplementation)

map <leader>xb <Action>(ActivateProblemsViewToolWindow)
map <leader>xw <Action>(ActivateProblemsViewToolWindow)

map K <Action>(ExpressionTypeInfo)
